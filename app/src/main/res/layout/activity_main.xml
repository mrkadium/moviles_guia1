<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Menú"
        android:layout_gravity="center_horizontal"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvBienvienida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:text=""
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/btnCalculadora"
        style="@style/buttonAction"
        android:layout_marginBottom="12dp"
        android:text="Calculadora"
        android:onClick="btncalculadoraOnclick" />

    <Button
        android:id="@+id/btnInfo"
        style="@style/buttonAction"
        android:layout_marginBottom="12dp"
        android:text="Información"
        android:onClick="btnInfoOnclick" />

    <Button
        android:id="@+id/btnLogin"
        style="@style/buttonAction"
        android:text="Login"
        android:onClick="btnLoginOnclick" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Guía 2 | Mario Rivera Olivo"
        android:layout_gravity="center_horizontal" />
</LinearLayout>